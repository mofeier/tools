{
    "name": "mofeier/tools",
    "description": "一个现代化的PHP工具库，提供消息处理、状态码管理、字符串转换、数学计算、双引擎加密功能等实用工具，特别优化URL参数和Token加密，使用PHP8.1+特性",
    "type": "library",
    "license": "MulanPSL-2.0",
    "autoload": {
        "psr-4": {
            "mofei\\": "src/"
        }
    },
    "authors": [
        {
            "name": "莫斐",
            "email": "zyk96321@163.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1",
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "suggest": {
        "ext-sodium": "推荐安装Sodium扩展以获得更好的加密性能和安全性"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "mofei\\tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "example": "php examples/usage.php"
    },
    "keywords": ["php", "tools", "utility", "message", "status-codes", "string-converter", "math-calculator", "crypto", "encryption", "sodium", "openssl", "url-safe", "token", "jwt", "php8.1"]
}
